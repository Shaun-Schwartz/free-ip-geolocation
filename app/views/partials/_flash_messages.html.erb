<% if flash.present? %>
  <div class='flash-container'>
    <% if flash[:success] %>
      <div class='flash-message success'>
        <%= flash[:success] %>
      </div>
    <% elsif flash[:error] %>
      <div class='flash-message error'>
        <%= flash[:error] %>
      </div>
    <% end %>
  </div>
<% end %>
