<div class='auth-form-container'>
  <%=form_tag reset_password_path, method: :post, class: 'auth-form' do %>
    <%= label_tag :new_password %>
    <%= password_field_tag :password, nil, id: 'password' %>
    <%= label_tag :confirm_new_password %>
    <%= password_field_tag :confirm_password, nil, id: 'confirm-password' %>
    <%= submit_tag 'Reset', class: 'auth-form-action' %>
  <% end %>
</div>
